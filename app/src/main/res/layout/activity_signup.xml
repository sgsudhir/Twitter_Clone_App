<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.twitterclone.SignupActivity">
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Twitter Clone.\nSignup now"
        android:textSize="20sp"
        android:textColor="@color/lightBlue"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/bt_signup_signup"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/background_signup_button_signup"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>
    <EditText
        android:id="@+id/et_signup_comform_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Conform Password"
        android:layout_above="@id/bt_signup_signup"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_above="@id/et_signup_comform_password"
        android:layout_marginBottom="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/et_signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_above="@id/et_signup_password"
        android:layout_marginBottom="20dp"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/et_signup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_above="@id/et_signup_email"
        android:layout_marginBottom="20dp"
        android:inputType="phone"
        android:maxLength="10" />
    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full name"
        android:layout_above="@id/et_signup_phone"
        android:layout_marginBottom="20dp"
        android:inputType="textCapWords"/>
</RelativeLayout>
